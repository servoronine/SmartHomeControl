<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape
            android:shape="rectangle"
            android:visible="true"
            android:dither="true"
            android:useLevel="false">
            <solid
                android:color="#4eaf51"/>
            <corners
                android:radius="100dp"/>
            <size
                android:width="45dp"
                android:height="45dp"/>
            <stroke
                android:width="2dp"
                android:color="#ebe9e9"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape
            android:shape="rectangle"
            android:visible="true"
            android:dither="true"
            android:useLevel="false">
            <solid
                android:color="#4eaf51"/>
            <corners
                android:radius="100dp"/>
            <size
                android:width="45dp"
                android:height="45dp"/>
            <stroke
                android:width="2dp"
                android:color="#ebe9e9"/>
        </shape>
    </item>
    <item android:state_checked="false">
        <shape
            android:shape="rectangle"
            android:visible="true"
            android:dither="true"
            android:useLevel="false">
            <solid
                android:color="#777777"/>
            <corners
                android:radius="100dp"/>
            <size
                android:width="45dp"
                android:height="45dp"/>
            <stroke
                android:width="2dp"
                android:color="#ebe9e9"/>
        </shape>
    </item>
</selector>