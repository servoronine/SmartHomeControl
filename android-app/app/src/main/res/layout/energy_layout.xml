<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/energy_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="59.33dp"
            android:background="@color/toolbar_color"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/header_text_energy"
                android:layout_gravity="center_horizontal"
                android:typeface="sans"
                android:textColor="#d24a43"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textIsSelectable="false"
                android:textStyle="bold"
                android:textSize="29.33dp"
                android:text="ENERGY"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"/>

        </android.support.v7.widget.Toolbar>


    </android.support.design.widget.AppBarLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:orientation="vertical"
                    android:layout_below="@id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
        >

        <View
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@drawable/top_shadow"
            android:layout_gravity="bottom"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="false"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="59.33dp"
            android:id="@+id/view"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            android:padding="0dp"
            android:layout_gravity="bottom"
            android:layout_alignParentLeft="false"
            android:layout_alignParentBottom="true"
            android:id="@+id/tableLayout">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="113.33dp"
                    android:layout_column="0"
                    android:gravity="bottom"
                    android:paddingBottom="14.67dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@drawable/button_background">

                    <ImageView
                        android:layout_width="46.00dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView3"
                        android:src="@drawable/icon_lights"
                        android:layout_gravity="bottom|center_horizontal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lighting"
                        android:id="@+id/textView8"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#f8f8f8"
                        android:textSize="12.00dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="113.33dp"
                    android:layout_column="1"
                    android:gravity="bottom"
                    android:paddingBottom="14.67dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@drawable/button_background">

                    <ImageView
                        android:layout_width="42.00dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView4"
                        android:src="@drawable/icon_heating"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_marginBottom="2.67dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Heating"
                        android:id="@+id/textView7"
                        android:layout_gravity="bottom|center_horizontal"
                        android:textSize="12.00dp"
                        android:textColor="#f8f8f8" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="113.33dp"
                    android:layout_column="2"
                    android:gravity="bottom"
                    android:paddingBottom="14.67dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@drawable/button_background">

                    <ImageView
                        android:layout_width="47.33dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView5"
                        android:src="@drawable/icon_music"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_marginBottom="2.67dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Music"
                        android:id="@+id/textView6"
                        android:textColor="#f8f8f8"
                        android:textSize="12.00dp"
                        android:layout_gravity="bottom|center_horizontal" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="113.33dp"
                    android:layout_column="3"
                    android:layout_gravity="top"
                    android:gravity="bottom"
                    android:paddingBottom="14.67dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@drawable/button_background">

                    <ImageView
                        android:layout_width="41.33dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView2"
                        android:src="@drawable/icon_tv"
                        android:layout_gravity="bottom|center_horizontal"
                        android:adjustViewBounds="false"
                        android:baselineAlignBottom="false"
                        android:clickable="false" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TV"
                        android:id="@+id/textView5"
                        android:textColor="#f8f8f8"
                        android:textSize="12.00dp"
                        android:layout_gravity="bottom|center_horizontal" />
                </LinearLayout>

            </TableRow>

        </TableLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@drawable/bottom_shadow"
            android:layout_gravity="bottom"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/tableLayout"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/tableLayout"
            android:layout_alignTop="@+id/view"
            android:paddingLeft="14dp"
            android:paddingRight="14dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*"
                android:layout_below="@+id/textView38"
                android:layout_alignParentStart="true"
                android:id="@+id/rl"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp">

                <Spinner
                    android:layout_width="55dp"
                    android:layout_height="55.33dp"
                    android:id="@+id/firstDay"
                    android:spinnerMode="dropdown"
                    android:layout_gravity="left|center_vertical"
                    android:background="#fff"
                    android:layout_alignParentStart="true"/>

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="55.33dp"
                    android:id="@+id/firstDate"
                    android:spinnerMode="dropdown"
                    android:background="#fff"
                    android:entries="@array/month"
                    android:layout_toStartOf="@+id/imageView105"
                    android:layout_toEndOf="@+id/firstDay"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/imageView105"
                    android:src="@drawable/arrow_energy"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:layout_gravity="center"
                    android:layout_alignParentTop="true"
                    android:layout_alignBottom="@+id/firstDate"
                    android:layout_centerInParent="true"/>

                <Spinner
                    android:layout_width="55dp"
                    android:layout_height="55.33dp"
                    android:id="@+id/secondDay"
                    android:spinnerMode="dropdown"
                    android:background="#fff"
                    android:layout_toEndOf="@+id/imageView105"/>

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="55.33dp"
                    android:id="@+id/secondDate"
                    android:spinnerMode="dropdown"
                    android:background="#fff"
                    android:entries="@array/month"
                    android:layout_gravity="center_vertical|right"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@+id/secondDay"/>
            </RelativeLayout>

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chart1"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@+id/relativeLayout21"
                android:layout_alignLeft="@+id/relativeLayout21"
                android:layout_alignStart="@+id/relativeLayout21"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Energy consumption \n for the period"
                android:id="@+id/textView38"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:textSize="20.67dp"
                android:fontFamily="sans-serif-medium"
                android:textAlignment="center"
                android:textColor="#f8f8f8"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:id="@+id/relativeLayout21"
                android:layout_below="@+id/rl"
                android:layout_alignParentStart="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_gravity="center_horizontal"
                    android:typeface="sans"
                    android:textColor="#d24a43"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textIsSelectable="false"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:text="23 000"
                    android:id="@+id/textView77"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:typeface="sans"
                    android:textColor="#d24a43"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:text="kw"
                    android:id="@+id/textView76"
                    android:layout_toRightOf="@+id/textView77"
                    android:layout_toEndOf="@+id/textView77"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="7dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView91"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/textView77"
                    android:layout_toStartOf="@+id/textView77"
                    android:src="@drawable/lightning_energy"
                    android:layout_marginRight="7dp"/>
            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>