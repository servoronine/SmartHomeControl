<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="59.33dp"
    >

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@drawable/music_new_button_selector"
        android:text="source"
        android:id="@+id/button7"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:textSize="12sp"
        android:textColor="#343a71"
        android:textColorHighlight="#343fff"
        android:fontFamily="sans-serif-black"
        android:textStyle="bold"
        android:layout_marginRight="30dp"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@drawable/music_new_button_selector"
        android:text=""
        android:id="@+id/button8"
        android:foreground="@drawable/icon_power"
        android:foregroundGravity="clip_horizontal|center|clip_vertical"
        android:layout_above="@+id/relativeLayout3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="30dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="215dp"
        android:layout_below="@+id/button7"
        android:layout_centerHorizontal="true"
        android:layout_alignWithParentIfMissing="false"
        android:id="@+id/relativeLayout3">

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="239dp"
            android:layout_height="215dp"
            android:indeterminate="false"
            android:id="@+id/progressBar"
            android:progress="100"
            android:secondaryProgress="35"
            android:progressDrawable="@drawable/music_new_progressbarstyle"
            android:layout_gravity="center"
            android:max="100"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button6"
            style="?android:attr/borderlessButtonStyle"
            android:stateListAnimator="@null"
            android:layout_centerInParent="true"
            android:background="@drawable/radial_button_center"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:id="@+id/button14"
            style="?android:attr/borderlessButtonStyle"
            android:stateListAnimator="@null"
            android:background="@drawable/radial_button_top"
            android:layout_above="@+id/button6"
            android:layout_alignLeft="@+id/button6"
            android:layout_alignStart="@+id/button6"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="51dp"
            android:id="@+id/button15"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/radial_button_bottom"
            android:stateListAnimator="@null"
            android:layout_below="@+id/button6"
            android:layout_centerHorizontal="true"/>

        <Button
            android:layout_width="52dp"
            android:layout_height="176dp"
            android:id="@+id/button12"
            style="?android:attr/borderlessButtonStyle"
            android:stateListAnimator="@null"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/button6"
            android:layout_toStartOf="@+id/button6"
            android:background="@drawable/radial_button_left"/>

        <Button
            android:layout_width="51dp"
            android:layout_height="175dp"
            android:id="@+id/button13"
            style="?android:attr/borderlessButtonStyle"
            android:stateListAnimator="@null"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/button6"
            android:layout_toEndOf="@+id/button6"
            android:background="@drawable/radial_button_right"/>

    </RelativeLayout>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@drawable/music_new_button_selector"
        android:text=""
        android:id="@+id/button9"
        android:foreground="@drawable/icon_backward"
        android:foregroundGravity="clip_horizontal|center|clip_vertical"
        android:layout_below="@+id/textView47"
        android:layout_toLeftOf="@+id/button10"
        android:layout_toStartOf="@+id/button10"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@drawable/music_new_button_selector"
        android:text=""
        android:id="@+id/button10"
        android:foreground="@drawable/icon_playlist"
        android:foregroundGravity="clip_horizontal|center|clip_vertical"
        android:padding="20dp"
        android:layout_below="@+id/textView47"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"/>

    <ToggleButton
        style="?android:attr/buttonStyleSmall"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@drawable/music_new_button_selector"
        android:text=""
        android:id="@+id/button11"
        android:foreground="@drawable/mute_button"
        android:foregroundGravity="clip_horizontal|center|clip_vertical"
        android:layout_alignTop="@+id/button10"
        android:layout_toRightOf="@+id/button10"
        android:layout_toEndOf="@+id/button10"
        android:textOn=" "
        android:textOff=" "/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Now Playing"
        android:id="@+id/textView48"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/relativeLayout3"
        android:textSize="12sp"
        android:textColor="#ececec"
        android:layout_marginTop="4dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Therr Matiz - Found U..."
        android:id="@+id/textView47"
        android:layout_below="@+id/textView48"
        android:layout_centerHorizontal="true"
        android:textSize="17sp"
        android:layout_marginBottom="4dp"
        android:textColor="#ececec"/>

</RelativeLayout>